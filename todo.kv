<FlatButton@ButtonBehavior+Label>:
	font_size: 16
	
<Todo>:
	id : worktodo
	display: task
	orientation: "vertical"
	
	padding:10

	BoxLayout:
		size_hint_y: None
		height: 30
		canvas.before:
			Color:
				rgba: (0, .45, .45 ,1)
			Rectangle:
				size: self.size
				pos: self.pos
		Label:
			text: "TODO APP"
			bold: True
			size_hint_x: .9

		FlatButton:
			
			text: "x"
			size_hint_x: .1
	BoxLayout:
		height:10
		orientation: "vertical"
		
		Label:
			
			text: "Add Task"
			
		TextInput:
			id: task
			hint_text: "Add your Task Here"
			text: ""
			
			

		BoxLayout:
			orientation: "horizontal"
			spacing: 10
			
				
			Button:
				text: "add"

				

				on_press:  += (task.text)
				size_hint_x: .3
				size_hint_y: .3
			Button:
				text: "show"
				size_hint_x: .3
				size_hint_y: .3
				on_press: 

			Button:
				text: "cancel"
				
				on_press: task.text = ""
				size_hint_x: .3
				size_hint_y: .3
	BoxLayout:
		height: 50	
		TextInput: 
			id: work
			hint_text: "your work list"
			bold: True
			text: ""		
		

