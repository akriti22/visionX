BoxLayout:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb: (1., 1., 1.)
        Rectangle:
            size: self.size
            pos: self.pos
    AddTodo:
        size_hint: (1., .15)
    VisibleTodoList:
        size_hint: (1., .75)
    Footer:
        size_hint: (1., .1)

<Todo>:
    strikethrough: self.completed
    on_release: self.release_callback(self.t_id)
    color: (0., 0., 0., 1.)

<TodoList>:
    StackLayout:
        orientation: 'lr-tb'
        id: todos
        size_hint: (1., None)
        height: self.minimum_height

<Footer>:
    orientation: 'horizontal'
    FilterLink:
        vis_filter: 'SHOW_ALL'
    FilterLink:
        vis_filter: 'SHOW_ACTIVE'
    FilterLink
        vis_filter: 'SHOW_COMPLETED'

<AddTodo>:
    orientation: 'horizontal'
    TextInput:
        id: text_input
        size_hint: (.7, 1.0)
    Button:
        text: 'Submit'
        size_hint: (.3, 1.0)
        on_release: root.add_todo_callback()