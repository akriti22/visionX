#:  import main taskdb
#:  import ListAdapter kivy.adapters.listadapter.ListAdapter
#:  import ListItemButton kivy.uix.listview.ListItemButton 

TaskDB:

<TaskDB>:
    orientation: "vertical"
    Taskinput: todo
    
    task_list: task_list_view
    padding: 10
    spacing: 10
 
    BoxLayout:
        size_hint_y: None
        height: "40dp"
 
        Label:
            text: "TO DO"
        TextInput:
            id: todo
        
 
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Submit"
            size_hint_x: 15
            on_press: root.submit_task()
        Button:
            text: "Delete"
            size_hint_x: 15
            on_press: root.delete_task()
        Button:
            text: "Replace"
            size_hint_x: 15
            on_press: root.replace_task()
 
    
    ListView:
        id: task_list_view
        adapter:
            ListAdapter(data=["Add your first task"], cls=main.TaskListButton)
 