#:  import main studentdb
#:  import ListAdapter kivy.adapters.listadapter.ListAdapter
#:  import ListItemButton kivy.uix.listview.ListItemButton 



CameraDB:
 
<CameraDB>:
    orientation: "vertical"
    text_input: camera_name
    camera_list: camera_list_view
    padding: 10
    spacing: 10

    BoxLayout:

        size_hint: (1, .2)

        height: 50
        pos_hint: {'top' : 1}
        canvas.before:
            Color:
                rgba: (0, .45, .45 ,1)
            Rectangle:
                size: self.size
                pos: self.pos
        
        Label:

            text: "Vision X"
            font_size: 40
            bold: True
            size_hint_x: .9

        Button:
            
            text: " = "
            size_hint_x: .1
    BoxLayout:
        height: 50
        Button:
            text: " camera add"
            pos_hint: {'bottom' : 1}

 
    BoxLayout:
        size_hint_y: None
        height: "40dp"
 
        Label:
            text: "camera Name"
        TextInput:
            id: camera_name
        
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Submit"
            size_hint_x: 15
            on_press: root.submit_camera()
        Button:
            text: "Delete"
            size_hint_x: 15
            on_press: root.delete_camera()
        Button:
            text: "Replace"
            size_hint_x: 15
            on_press: root.replace_camera()
 
    # Define starting data and point to the ListItemButton
    # in the Python code
    ListView:
        id: camera_list_view
        adapter:
            ListAdapter(data=["Akriti Guarav"], cls=main.CameraListButton)
 