#:  import main vision
#:  import ListAdapter kivy.adapters.listadapter.ListAdapter
#:  import ListItemButton kivy.uix.listview.ListItemButton 



Vision:
 
<Vision>:
    orientation: "vertical"
    text_input: test
    camera_list: camera_list_view
    padding: 10
    spacing: 10
    color: 0, 0 , 0 ,0
# header
    BoxLayout:
        size_hint_y: .15
        canvas.before:
            Color:
                rgba: (0, .45, .45 ,1)
            Rectangle:

                size: self.size
                pos: self.pos
        Image:
            source: 'logo.png'
            size_hint_x: .1
            
        Label:
            text: "Vision X"
            font_size: self.height / 2
            bold: True
            size_hint_x: .8
        Image:
            size_hint_x: .1
            source: 'nav.png'
            on_touch_down: root.navigation()
        

#  camera view
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.4

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.2
            Button:
                text: "camera name"
                size_hint_y: 1
            Button:
                text: "camera location " 
                size_hint_y: 1

        BoxLayout:
            orientation: "horizontal"
            height: root.height * 0.9

            BoxLayout:
                orientation: "horizontal"
                canvas.before:
                    Color:
                        rgba: (1, 1, 1 ,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                

                Image: 
                        
                    source: 'a.png'
                Image:
                    source: 'b.png'
                Image:
                    source: 'c.png'

            BoxLayout:
                orientation: "horizontal"
                canvas.before:
                    Color:
                        rgba: (0, 0, .1 ,1)
                    Rectangle:
                        size: self.size
                
                        pos: self.pos
                Label:
                    text: " view"
# tabular  view    
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.45
        
        BoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: (1, 1, 1 ,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: .3

            BoxLayout:
                orientation: "horizontal"
         
                
                    
                TextInput:
                    id: test
                    
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "Delete"
                    size_hint_x: 0.5
                    on_press: root.delete()
                Button:
                    text: "Add"
                    size_hint_x: 0.5
                    on_press: root.add()
            

        BoxLayout:
            orientation: "vertical"
            
            GridLayout:
                size_hint: 1, None
                size_hint_y: None
                height: 25
                cols: 4

                Label:
                    text: "User ID"
                Label:
                    text: "User Name"
                Label:
                    text: " test"
                Label:
                    text: "check"

            ListView:
                id: camera_list_view
                adapter:
                    ListAdapter(data=["        Akriti                   Guarav                 " ], cls=main.VisionListButton)




